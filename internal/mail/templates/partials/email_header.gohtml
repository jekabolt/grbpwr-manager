{{define "email_header"}}
<!doctype html>
<html lang="en">
  <head>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
  </head>
  <body style="margin:0; padding:0; background-color:#ffffff;">
    <!-- Hidden preheader (inbox preview, not visible in body) -->
    <div style="display:none !important; visibility:hidden; mso-hide:all; font-size:1px; line-height:1px; max-height:0; max-width:0; opacity:0; overflow:hidden;">
      {{.Preheader}}
    </div>

    <!-- Full-width wrapper -->
    <table role="presentation" width="100%" border="0" cellspacing="0" cellpadding="0" style="width:100%; background-color:#ffffff;">
      <tr>
        <td align="center">

          <!-- 600px container -->
          <table role="presentation" width="600" border="0" cellspacing="0" cellpadding="0" style="width:600px; max-width:600px; background-color:#ffffff;">
            <!-- Top black bar with centered logo -->
            <tr>
              <td align="center" style="background-color:#000000;">
                <table role="presentation" width="100%" border="0" cellspacing="0" cellpadding="0">
                  {{template "spacer_44"}}
                  <tr>
                    <td align="center">
                      <img src="https://files.grbpwr.com/logo-invert.png" alt="GRBPWR logo" width="80" style="display:block; width:80px; height:auto; border:0; outline:none; text-decoration:none;">
                    </td>
                  </tr>
                  {{template "spacer_44"}}
                </table>
              </td>
            </tr>

            <!-- Main content spacing -->
            {{template "spacer_28"}}
{{end}}
